            <!-- Cart Section (Sidebar) -->
            <aside class="lg:w-1/3">
                <div class="bg-white p-6 rounded-lg shadow-sm sticky top-8">
                    <h2 class="text-2xl font-semibold mb-4 text-gray-700 border-b border-gray-200 pb-2">‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ó‡∏µ‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å</h2>
                    <ul id="cart-items" class="text-gray-600 mb-4 min-h-[16rem] max-h-96 overflow-y-auto divide-y divide-gray-100">
                        <!-- Selected items will be populated by JS -->
                        <li id="empty-cart-msg" class="text-gray-400 italic py-4">‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£</li>
                    </ul>
                    <div class="border-t border-gray-200 pt-4">
                        <div class="flex justify-between items-center text-xl font-semibold text-gray-800 mb-4">
                            <span>‡∏¢‡∏≠‡∏î‡∏£‡∏ß‡∏°:</span>
                            <span><span id="total-price">0.00</span> ‡∏ö‡∏≤‡∏ó</span>
                        </div>
                        <button id="clear-cart" class="w-full bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600 transition-colors">
                            ‡∏•‡πâ‡∏≤‡∏á‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£
                        </button>
                        <!-- ‚ú® New Gemini Feature Button -->
                        <button id="analyze-order" class="w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition-colors mt-2">
                            ‚ú® ‡∏ß‡∏¥‡πÄ‡∏Ñ‡∏£‡∏≤‡∏∞‡∏´‡πå‡∏≠‡∏≠‡πÄ‡∏î‡∏≠‡∏£‡πå
                        </button>
                    </div>
                    <!-- ‚ú® New Gemini Result Container -->
                    <div id="analysis-result-container" class="mt-4 p-4 bg-gray-100 rounded-lg text-gray-700 hidden">
                        <h3 class="font-semibold text-lg mb-2">‚ú® ‡∏Ñ‡∏≥‡πÅ‡∏ô‡∏∞‡∏ô‡∏≥‡∏à‡∏≤‡∏Å AI</h3>
                        <p id="analysis-result-text" class="whitespace-pre-wrap">‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ß‡∏¥‡πÄ‡∏Ñ‡∏£‡∏≤‡∏∞‡∏´‡πå...</p>
                    </div>
                </div>
            </aside>
        </div>
    </div>

    <!-- JavaScript Logic -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            let cart = []; // Store cart items as { name, price }

            const cartItemsList = document.getElementById('cart-items');
            const emptyCartMsg = document.getElementById('empty-cart-msg');
            const totalPriceEl = document.getElementById('total-price');
            const clearCartBtn = document.getElementById('clear-cart');
            const allMenuItems = document.querySelectorAll('.menu-item-clickable');
            
            // ‚ú® New elements for Gemini feature
            const analyzeOrderBtn = document.getElementById('analyze-order');
            const analysisResultContainer = document.getElementById('analysis-result-container');
            const analysisResultText = document.getElementById('analysis-result-text');

            // ‚ú® Gemini API Configuration
            const apiKey = ""; // API key is handled by the environment
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;

            // Function to render the cart
            function renderCart() {
                // Clear current list
                cartItemsList.innerHTML = '';

                if (cart.length === 0) {
                    cartItemsList.appendChild(emptyCartMsg); // Show empty message
                    totalPriceEl.textContent = '0.00';
                    analysisResultContainer.classList.add('hidden'); // ‚ú® Hide analysis if cart is empty
                    return;
                }

                let total = 0;
                
                // Use an object to group items
                const groupedItems = {};
                
                cart.forEach(item => {
                    if (groupedItems[item.name]) {
                        groupedItems[item.name].quantity += 1;
                    } else {
                        groupedItems[item.name] = {
                            price: item.price,
                            quantity: 1
                        };
                    }
                    total += item.price; // Add price to total
                });

                // Render grouped items
                Object.keys(groupedItems).forEach(name => {
                    const item = groupedItems[name];
                    const li = document.createElement('li');
                    li.className = 'flex justify-between items-center py-2';
                    li.innerHTML = `
                        <span>
                            <span class="font-semibold">${item.quantity}x</span> ${name}
                        </span>
                        <span class="font-semibold">${(item.price * item.quantity).toFixed(2)}</span>
                    `;
                    cartItemsList.appendChild(li);
                });

                // Update total price
                totalPriceEl.textContent = total.toFixed(2);
            }

            // Function to add item to cart
            function addToCart(name, price) {
                cart.push({ name, price });
                renderCart();
            }

            // Add click event listeners to all menu items
            allMenuItems.forEach(item => {
                item.addEventListener('click', () => {
                    const name = item.dataset.name;
                    const price = parseFloat(item.dataset.price);
                    
                    if (name && !isNaN(price)) {
                        addToCart(name, price);
                    }
                });
            });

            // Add click event listener to clear cart button
            clearCartBtn.addEventListener('click', () => {
                cart = []; // Empty the cart array
                renderCart(); // Re-render the cart
                analysisResultContainer.classList.add('hidden'); // ‚ú® Hide analysis
                analysisResultText.textContent = "‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ß‡∏¥‡πÄ‡∏Ñ‡∏£‡∏≤‡∏∞‡∏´‡πå..."; // ‚ú® Reset text
            });

            // ‚ú® New Event listener for Analyze Order button
            analyzeOrderBtn.addEventListener('click', () => {
                if (cart.length === 0) {
                    analysisResultContainer.classList.remove('hidden');
                    analysisResultText.textContent = "‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÄ‡∏°‡∏ô‡∏π‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏ô‡πâ‡∏≠‡∏¢ 1 ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏Å‡πà‡∏≠‡∏ô‡∏Ñ‡∏£‡∏±‡∏ö";
                    return;
                }
                
                // Get item names from cart
                const itemNames = cart.map(item => item.name).join(', ');
                
                // Call the Gemini API
                callGeminiApi(itemNames);
            });

            // ‚ú® New Function to call Gemini API
            async function callGeminiApi(itemNames) {
                // Show loading state
                analysisResultContainer.classList.remove('hidden');
                analysisResultText.textContent = "‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ß‡∏¥‡πÄ‡∏Ñ‡∏£‡∏≤‡∏∞‡∏´‡πå... üß†";

                const systemPrompt = "‡∏Ñ‡∏∏‡∏ì‡∏Ñ‡∏∑‡∏≠‡∏ú‡∏π‡πâ‡∏ä‡πà‡∏ß‡∏¢‡∏£‡πâ‡∏≤‡∏ô‡∏Å‡∏≤‡πÅ‡∏ü‡∏≠‡∏≤‡∏£‡∏°‡∏ì‡πå‡∏î‡∏µ ‡∏´‡∏ô‡πâ‡∏≤‡∏ó‡∏µ‡πà‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡∏Ñ‡∏∑‡∏≠‡∏Å‡∏≤‡∏£‡∏î‡∏π‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏™‡∏±‡πà‡∏á‡∏ã‡∏∑‡πâ‡∏≠‡∏Ç‡∏≠‡∏á‡∏•‡∏π‡∏Å‡∏Ñ‡πâ‡∏≤ ‡πÅ‡∏•‡∏∞‡πÉ‡∏´‡πâ‡∏Ñ‡∏≥‡πÅ‡∏ô‡∏∞‡∏ô‡∏≥‡∏´‡∏£‡∏∑‡∏≠‡∏Ñ‡∏≥‡∏ä‡∏°‡∏ó‡∏µ‡πà‡∏™‡∏ô‡∏∏‡∏Å‡∏™‡∏ô‡∏≤‡∏ô‡πÅ‡∏•‡∏∞‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏™‡∏£‡∏£‡∏Ñ‡πå (‡πÄ‡∏õ‡πá‡∏ô‡∏†‡∏≤‡∏©‡∏≤‡πÑ‡∏ó‡∏¢) ‡πÇ‡∏î‡∏¢‡∏™‡∏£‡∏∏‡∏õ‡∏™‡∏±‡πâ‡∏ô‡πÜ ‡πÑ‡∏°‡πà‡πÄ‡∏Å‡∏¥‡∏ô 2-3 ‡∏õ‡∏£‡∏∞‡πÇ‡∏¢‡∏Ñ ‡πÄ‡∏ä‡πà‡∏ô ‡∏ñ‡πâ‡∏≤‡∏•‡∏π‡∏Å‡∏Ñ‡πâ‡∏≤‡∏™‡∏±‡πà‡∏á‡∏Å‡∏≤‡πÅ‡∏ü‡πÄ‡∏¢‡∏≠‡∏∞ ‡∏ö‡∏≠‡∏Å‡∏ß‡πà‡∏≤ '‡∏î‡∏π‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡∏à‡∏∞‡∏ï‡πâ‡∏≠‡∏á‡∏•‡∏∏‡∏¢‡∏á‡∏≤‡∏ô‡∏´‡∏ô‡∏±‡∏Å‡πÅ‡∏ô‡πà‡πÜ!' ‡∏´‡∏£‡∏∑‡∏≠‡∏ñ‡πâ‡∏≤‡∏™‡∏±‡πà‡∏á‡∏Ç‡∏≠‡∏á‡∏´‡∏ß‡∏≤‡∏ô‡πÄ‡∏¢‡∏≠‡∏∞ '‡∏™‡∏≤‡∏¢‡∏´‡∏ß‡∏≤‡∏ô‡∏ï‡∏±‡∏ß‡∏à‡∏£‡∏¥‡∏á!' ‡∏´‡∏£‡∏∑‡∏≠‡πÅ‡∏ô‡∏∞‡∏ô‡∏≥‡∏Ç‡∏≠‡∏á‡∏ó‡∏µ‡πà‡πÄ‡∏Ç‡πâ‡∏≤‡∏Å‡∏±‡∏ô";
                
                const userQuery = `‡∏•‡∏π‡∏Å‡∏Ñ‡πâ‡∏≤‡∏™‡∏±‡πà‡∏á: ${itemNames}. ‡∏ä‡πà‡∏ß‡∏¢‡∏ß‡∏¥‡πÄ‡∏Ñ‡∏£‡∏≤‡∏∞‡∏´‡πå‡∏≠‡∏≠‡πÄ‡∏î‡∏≠‡∏£‡πå‡∏ô‡∏µ‡πâ‡∏´‡∏ô‡πà‡∏≠‡∏¢‡∏Ñ‡∏£‡∏±‡∏ö`;

                const payload = {
                    contents: [{ parts: [{ text: userQuery }] }],
                    systemInstruction: {
                        parts: [{ text: systemPrompt }]
                    },
                };

                // Exponential backoff for retries
                let response;
                let delay = 1000;
                for (let i = 0; i < 3; i++) {
                    try {
                        response = await fetch(apiUrl, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(payload)
                        });

                        if (response.ok) {
                            break; // Success
                        } else if (response.status === 429 || response.status >= 500) {
                            // Retry on rate limit or server error
                            await new Promise(resolve => setTimeout(resolve, delay));
                            delay *= 2;
                        } else {
                            throw new Error(`API error: ${response.statusText}`);
                        }

                    } catch (error) {
                        if (i === 2) {
                           console.error("Error calling Gemini API:", error);
                           analysisResultText.textContent = "‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡∏Ñ‡∏£‡∏±‡∏ö";
                           return;
                        }
                        await new Promise(resolve => setTimeout(resolve, delay));
                        delay *= 2;
                    }
                }

                try {
                    const result = await response.json();
                    const candidate = result.candidates?.[0];

                    if (candidate && candidate.content?.parts?.[0]?.text) {
                        const text = candidate.content.parts[0].text;
                        analysisResultText.textContent = text;
                    } else {
                        analysisResultText.textContent = "‡∏Ç‡∏≠‡∏≠‡∏†‡∏±‡∏¢‡∏Ñ‡∏£‡∏±‡∏ö ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏ß‡∏¥‡πÄ‡∏Ñ‡∏£‡∏≤‡∏∞‡∏´‡πå‡πÑ‡∏î‡πâ‡πÉ‡∏ô‡∏Ç‡∏ì‡∏∞‡∏ô‡∏µ‡πâ";
                    }
                } catch (e) {
                     analysisResultText.textContent = "‡∏Ç‡∏≠‡∏≠‡∏†‡∏±‡∏¢‡∏Ñ‡∏£‡∏±‡∏ö ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏≠‡πà‡∏≤‡∏ô‡∏ú‡∏•‡∏•‡∏±‡∏û‡∏ò‡πå‡πÑ‡∏î‡πâ";
                }
            }

            // Initial render
            renderCart();
        });
    </script>

</body>
</html>

